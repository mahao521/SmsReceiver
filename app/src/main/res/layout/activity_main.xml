<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mahao.smsreceiver.MainActivity">

    <TextView
        android:id="@+id/txt_phone"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:hint="正在获取手机号...."
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <Button
        android:id="@+id/btn_mehtod_one"
        android:layout_marginTop="10dp"
        android:text="获取本机号码---方法一"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_method_two"
        android:layout_marginTop="10dp"
        android:text="获取本机手机号码---方法二"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_next_view"
        android:text="在监听开机状态-不需要代开APP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="10dp"
        android:text="自定义一个广播接收者"
        android:id="@+id/btn_next_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
